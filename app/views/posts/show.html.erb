<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Url:</strong>
  <%= @post.url %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<%= simple_form_for [@post, Comment.new] do |f| %>
  <%= f.text_area :comment_text %>
  <br>
  <%= f.submit "Add Comment" %>
<% end %>

<%= render partial: @post.comments %>
